<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.todo3.todo33.mapper.TodoMapper">

                      <!--   Lists   -->
  <select id="selectAllLists" resultType="com.todo3.todo33.entity.TodoLists">
    select * from lists
    <!-- select * from lists INNER JOIN cards ON lists.id = cards.list_id; -->
  </select>
  <insert id="addLists" parameterType="com.todo3.todo33.entity.TodoLists">
    <!-- insert into lists (title)
    values (#{title}) -->
    insert into lists (id,title)
    values (#{id},#{title})
  </insert>
  <delete id="deleteLists" parameterType="com.todo3.todo33.entity.TodoLists">
    delete from lists where id=#{id}
    <!-- delete from lists where title=#{title} -->
  </delete>


                  <!--     cards         -->
  <select id="selectAllCards" resultType="com.todo3.todo33.entity.TodoCards">
    select * from cards 
    <!-- select * from lists LEFT JOIN cards ON lists.id = cards.list_id; -->
  </select>

  <insert id="addCards" parameterType="com.todo3.todo33.entity.TodoCards">
    insert into cards (card_id, card_title, list_id)
    values (#{card_id},#{card_title},#{list_id})
    <!-- insert into lists (id,title)
    values (#{id},#{title}) -->
  </insert>

  <delete id="deleteCards" parameterType="com.todo3.todo33.entity.TodoCards">
    delete from cards where card_id=#{card_id}
    <!-- delete from cards where card_title=#{card_title} -->
  </delete>




                            <!--     contents       -->
  <select id="selectAllContents" resultType="com.todo3.todo33.entity.TodoContents">
    select * from contents
    <!-- select * from lists LEFT JOIN cards ON lists.id = cards.list_id; -->
  </select>

  <insert id="addContents" parameterType="com.todo3.todo33.entity.TodoContents">
    insert into contents (content, card_id)
    values (#{content},#{card_id})
    <!-- insert into lists (id,title)
    values (#{id},#{title}) -->
  </insert>

  <delete id="deleteContents" parameterType="com.todo3.todo33.entity.TodoContents">
    <!-- delete from lists where id=#{id} -->
    delete from contents where content=#{content}
  </delete>

</mapper>